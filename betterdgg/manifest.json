{
    "name": "Better Destiny.gg",
    "version": "0.1.0",
    "manifest_version": 2,
    
    "description": "Restores emotes and faith in humanity to users of destiny.gg",
    "icons": {
        "48": "icon.png"
    },
    
    "permissions": [
        "*://*.destiny.gg/*"
    ],

    "content_scripts": [
        {
            "matches": ["*://*.destiny.gg/*"],
            "css": ["betterdgg.css"],
            "js": ["betterdgg.js"],
            "all_frames":true
        }
    ],

    "web_accessible_resources": [
        "images/*"
    ]
}
