{
    "name": "Bestiny.gg",
    "version": "1.0.1",
    "manifest_version": 2,

    "description": "Make Destiny.gg Great Again",
    "icons": {
        "48":  "icon.png",
        "128": "icon128.png"
    },

    "permissions": [
        "*://*.destiny.gg/*",
        "*://*.overrustle.com/*"

    ],

    "content_scripts": [
        {
            "matches": ["*://*.destiny.gg/*"],
            "css": ["bestinygg.css"],
            "js": ["bestinygg.js"],
            "all_frames":true
        }
    ],

    "web_accessible_resources": [
        "images/*"
    ]
}
